<?xml version="1.1" encoding="UTF-8" standalone="no"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="6" author="paradisu">
        <addUniqueConstraint
            constraintName="uq_warp_name_context"
            tableName="WARPS"
            columnNames="name, context" />
        <modifyDataType tableName="WARPS" columnName="x" newDataType="DOUBLE" />
        <modifyDataType tableName="WARPS" columnName="y" newDataType="DOUBLE" />
        <modifyDataType tableName="WARPS" columnName="z" newDataType="DOUBLE" />
        <addColumn tableName="WARPS">
            <column name="aliases" type="VARCHAR(255) [100]" />
        </addColumn>
    </changeSet>

</databaseChangeLog>